# P360 Railway Environment Configuration
# Copy this to .env and fill in your actual tokens/keys

# ============================================
# Bot Tokens (Required)
# ============================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_token_here

# Get from Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_token_here

# ============================================
# API Keys (Required for full functionality)
# ============================================

# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_key_here

# Get from https://cloud.ouraring.com
OURA_API_KEY=your_oura_api_key_here

# ============================================
# Database (Optional but recommended)
# ============================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anon key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase service role key (for migrations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# Configuration
# ============================================

# Default user ID for cron jobs and demos
P360_USER_ID=bot-default

# Environment (production, development, staging)
NODE_ENV=production

# ============================================
# Optional: Webhook Configuration
# ============================================

# Railway public domain (auto-set by Railway)
# RAILWAY_PUBLIC_DOMAIN=your-service.up.railway.app

# Telegram webhook endpoint (set via bot API after deployment)
# TELEGRAM_WEBHOOK_URL=https://your-service.up.railway.app/telegram/webhook
