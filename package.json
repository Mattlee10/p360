{
  "name": "p360",
  "version": "1.0.0",
  "description": "Bio-data driven decision support",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install && npm install --workspace=apps/telegram --workspace=apps/discord --workspace=packages/core",
    "build": "npm install --workspace=packages/core && npm run build --workspace=apps/telegram && npm run build --workspace=apps/discord",
    "build-telegram": "cd apps/telegram && npm run build",
    "build-discord": "cd apps/discord && npm run build",
    "start-telegram": "cd apps/telegram && npm start",
    "start-discord": "cd apps/discord && npm start"
  }
}
